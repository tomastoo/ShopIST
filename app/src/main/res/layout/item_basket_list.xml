<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textItemName"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/textItemQuantities"
        android:text="Latas de atum 150g"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textItemQuantities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="151dp"
        android:text="5 / 5"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/editBasketItem"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="74dp"
        android:src="@drawable/ic_edit"
        app:srcCompat="@drawable/ic_edit" />

    <ImageButton
        android:id="@+id/removeBasketItem"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        tools:srcCompat="@drawable/ic_remove" />

</RelativeLayout>